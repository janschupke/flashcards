{
  "name": "chinese",
  "version": "1.0.0",
  "type": "module",
  "description": "Flashcards for Chinese Characters",
  "main": "index.html",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint './src/**/*.{ts,js,tsx,jsx}' --max-warnings 0",
    "lint:fix": "eslint './src/**/*.{ts,js,tsx,jsx}' --fix",
    "format:check": "prettier --check './src/**/*.{ts,tsx,js,jsx,json,css,md}'",
    "format": "prettier --write './src/**/*.{ts,tsx,js,jsx,json,css,md}'",
    "knip": "knip",
    "knip:fix": "knip --fix",
    "knip:fix:files": "knip --fix --allow-remove-files",
    "check": "npm run typecheck && npm run test && npm run lint && npm run format && npm run build"
  },
  "author": "jan@schupke.io",
  "license": "MIT",
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-tooltip": "^5.30.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.0.10",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jsdom": "^26.1.0",
    "knip": "^5.78.0",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.8.3",
    "vite": "^7.0.2",
    "vitest": "^3.2.4"
  }
}
